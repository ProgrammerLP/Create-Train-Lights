{
  "schemaVersion": 1,
  "id": "ctl",
  "version": "${version}",
  "name": "Create: Train Lights",
  "description": "Create addon that adds custom interior and head tail lights for trains that automatically switch between headlight and tail light depending on the direction of travel.",
  "authors": [
    "ProgrammerLP"
  ],
  "contact": {
    "homepage": "https://github.com/ProgrammerLP/Create-Train-Lights",
    "sources": "https://github.com/ProgrammerLP/Create-Train-Lights"
  },
  "license": "AGPL-3",
  "icon": "mod_icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "net.adeptstack.ctl.fabric.MainFabric"
    ],
    "client": [
      "net.adeptstack.ctl.fabric.client.MainFabricClient"
    ]
  },
  "mixins": [
    "ctl.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.15.11",
    "minecraft": "~1.20.1",
    "java": ">=17",
    "architectury": ">=9.2.14",
    "fabric-api": "*"
  },
  "suggests": {
    "another-mod": "*"
  }
}
